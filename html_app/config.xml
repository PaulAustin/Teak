<?xml version='1.0' encoding='utf-8'?>
<widget id="io.hld.teakblocks" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Teak Blocks</name>
    <description>
        A block editor for teak programs.
    </description>
    <author email="paul.austin@hld.io" href="http://hld.io">
        Paul Austin
    </author>
    <icon src="res/app-icon.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="WebViewBounce" value="false" />
    <platform name="android">
        <preference name="Fullscreen" value="true" />
    </platform>
    <platform name="ios">
    </platform>
</widget>
